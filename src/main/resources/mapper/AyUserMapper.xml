    <update id="update" parameterType="com.ay.model.AyUser">
        update ay_user
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        delete form ay_user
        where id = #{id}
    </delete>

    <delete id="deleteByName" parameterType="String">
        delete from ay_user
        where name = #{name}
    </delete>


