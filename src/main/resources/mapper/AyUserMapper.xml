    <!-- 使用map -->
    <select id="findByNameAndPassword" parameterType="map" resultMap="userMap">
        select * from ay_user a
        <where>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
